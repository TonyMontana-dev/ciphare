{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/encode",
      "dest": "api/encode/index.py"
    },
    {
      "src": "/api/decode",
      "dest": "api/decode/index.py"
    },
    {
      "src": "/api/posts",
      "dest": "api/posts/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
